{
   "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "target": "ES2016",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "module": "Node16",
      "moduleResolution": "Node16",
      "paths": {
         "@/*": ["./*"]
      }
   },
   "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
   "exclude": ["node_modules"]
}
